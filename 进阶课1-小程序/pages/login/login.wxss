/* pages/login/login.wxss */

page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.maincontainer {
  height: 90%;
}

.bg-img {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: -1;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
  width: 100%;
  margin-top: 10%;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.usermotto {
  margin-top: 200px;
}

.avatar-wrapper {
  padding: 0;
  width: 56px !important;
  border-radius: 8px;
  margin-top: 40px;
  margin-bottom: 40px;
}

.avatar {
  display: block;
  width: 56px;
  height: 56px;
}

.nickname-wrapper {
  display: flex;
  width: 80%;
  padding: 16px;
  box-sizing: border-box;
  border-top: .5px solid rgba(0, 0, 0, 0.1);
  border-bottom: .5px solid rgba(0, 0, 0, 0.1);
  background-color: rgba(255, 255, 255, 0.3);
  color: black;
}

.nickname-label {
  width: 105px;
}

.nickname-input {
  flex: 1;
}

.button-box {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 10vh;
}

.button-box>button {
  margin-bottom: 5%;
  width: fit-content;
  background-color: rgba(255, 255, 255, 0.3);
  color: rgb(42, 51, 58);
}

.button-hover {
  background-color: rgba(77, 147, 195, 0.8) !important;
}

.info-box {
  display: flex;
  flex-direction: column;
  margin-top: 20%;
  margin-left: 5%;
}

.info-box text {
  color: white;
  font-size: 13px;
}