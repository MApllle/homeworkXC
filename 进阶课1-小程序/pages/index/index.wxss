/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.bg-img {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: -1;
}

.card-container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx 30rpx;
  box-sizing: border-box;
}

.maintext {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 80%;
  height: 50vh;
  background-color: rgba(255, 255, 255, 0.5);
}

.maintext textarea {
  width: 90%;
  height: 80%;
  white-space: pre-wrap;
  word-wrap: break-word;
  word-break: normal;
}

.to-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 95%;
  height: 10%;
  margin-top: 5%;
  margin-bottom: 5%;
  border-bottom: .5px solid rgba(0, 0, 0, 0.1);
}

.to-wrapper input {
  display: flex;
  width: 95%;
}

.music-button {
  display: flex;
  flex-direction: column;
  margin-left: auto;
  width: 10%;
  height: 10%;
}

.operation {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 80%;
  height: 30vh;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
  width: 80%;
  height: 20vh;
  margin-bottom: 1vh;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.usermotto {
  margin-top: 200px;
}

.avatar {
  display: block;
  width: 56px;
  height: 56px;
}

.nickname-wrapper {
  display: flex;
  width: 100%;
  padding: 5px;
  box-sizing: border-box;
  border-bottom: .5px solid rgba(0, 0, 0, 0.1);
  color: black;
}

.nickname-label {
  width: 90%;
  align-items: center;
}

.userinfo text {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.submit-button {
  margin-top: 10%;
}

.operation>button {
  background-color: rgba(255, 255, 255, 0.3);
  color: white;
}

.button-hover {
  background-color: rgba(77, 147, 195, 0.8) !important;
}